- form_for :user_session, :url => session_path do |f|
  %fieldset
    %legend Login
    %dl
      %dt= f.label :email
      %dd= f.text_field :email

      %dt= f.label :password
      %dd= f.password_field :password

      %dt
        = f.check_box :remember_me
        = f.label :remember_me

  = submit_tag 'Login'
