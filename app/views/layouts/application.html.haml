!!! Strict
%html
  %head
  = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  = javascript_include_tag 'jquery-1.3.2.min.js', 'application'
  %body.bp
    #wrap
      #header
        %h1 Case Manager
        %ul.tabs.right
          %li= link_to("Home", root_path)
          %li= link_to("Cases", root_path)
          %li= link_to("People", root_path)
        %ul.tabs
          %li= link_to("Case 1234", root_path)
          %li= link_to("Case 14", root_path)
          %li.selected= link_to("Case 124", root_path)
          %li= link_to("Case 1354", root_path)
        #user
          %ul
            %li Joe User
            %li= link_to("My Account", root_path)
            %li= link_to("Log Out", root_path)
      #content{:class => (@content_for_sidebar.nil? ? nil : 'with-sidebar')}
        = yield
      #sidebar
        = yield(:sidebar)
      #footer
        %p Copyright &copy;2009
