!!! Strict
%html
  %head
  = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'compiled/print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  = javascript_include_tag 'jquery-1.3.2.min.js', 'application'
  %body.bp
    #wrap
      #header
        %h1 Carolina People Helpers
        %h2 Case Management
        %ul.tabs.right
          %li{:class=>(controller.action_name == 'dashboard' ? 'selected' : nil)}= link_to("Home", dashboard_site_path)
          %li= link_to("Cases", root_path)
          %li{:class => (controller.action_name == 'list' ? 'selected' : nil)}= link_to("People", list_site_path)
        %ul.tabs
          %li= link_to("Case 1234", root_path)
          %li= link_to("Case 14", root_path)
          %li{:class => (controller.action_name == 'index' ? 'selected' : nil)}= link_to("Case 124", root_path)
          %li= link_to("Case 1354", root_path)
        #user
          %ul
            %li Joe User
            %li= link_to("My Account", root_path)
            %li= link_to("Log Out", root_path)
      #content{:class => (@content_for_sidebar.nil? ? nil : 'with-sidebar')}
        = yield
      = render :partial => 'layouts/sidebar' if @content_for_sidebar
      #footer
        %p.quiet 
          Copyright &copy;2009 Rails on Softwares Inc. Ltd. LLC
