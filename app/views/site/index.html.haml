- content_for(:sidebar) do
  = image_tag('bubba.jpg', :alt => 'Picture of Client', :class => 'client')
  %h3
    Bubba Gump
  %address
    %span.addr 1234 Main St
    %span.addr Boiling Springs, SC 29316
  %h4 Reminders
  %p
    Nov. 12: Call Shirley
  %h4 Assistance
  %p
    Oct 31: Heating bill

%h2 History
%ul.history
  - (rand(15) + 1).times do |history|
    %li{:id => "history_#{history}", :class => cycle('odd', 'even')}
      %span.date
        %abbr{:title => history.weeks.ago}= "#{distance_of_time_in_words_to_now(history.weeks.ago)} ago"
      %span.description
        = Faker::Lorem.sentence
        = link_to('More', root_path, :class => "toggler down")
        .hidden.more= Faker::Lorem.paragraph
%h2 Who&apos;s Involved
%ul.people
  - (1..3).each do |person|
    %li{:id => "person_#{person}"}
      = link_to(image_tag("bubba.jpg", :height => 32, :width => 32), root_path)
      Client
      = Faker::Name.name
